<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ca.senecacollege.myvmlab.student.tabletopassistant.HostJoinGameActivity"
    tools:showIn="@layout/activity_host_join_game">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JOIN GAME"
        android:id="@+id/button8"
        android:layout_alignParentBottom="true"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonText"
        android:layout_marginTop="10dp"
        android:onClick="openJoinGame"

        android:layout_alignRight="@+id/button9"
        android:layout_alignEnd="@+id/button9"
        android:layout_alignLeft="@+id/button9"
        android:layout_alignStart="@+id/button9"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOST GAME"
        android:id="@+id/button9"
        android:layout_above="@+id/button8"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonText"
        android:layout_marginTop="10dp"
        android:onClick="openHostGame"
        android:layout_alignRight="@+id/button10"
        android:layout_alignEnd="@+id/button10"
        android:layout_alignLeft="@+id/button10"
        android:layout_alignStart="@+id/button10"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD SAVED SHEET"
        android:id="@+id/button10"
        android:layout_above="@+id/button9"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonText"
        android:layout_marginTop="10dp"
        android:onClick="openLoadCharacter"
        android:layout_alignRight="@+id/button11"
        android:layout_alignEnd="@+id/button11"
        android:layout_alignLeft="@+id/button11"
        android:layout_alignStart="@+id/button11"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD CREATED SHEET"
        android:id="@+id/button11"
        android:layout_above="@+id/button10"
        android:layout_centerHorizontal="true"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonText"
        android:layout_marginTop="10dp"
        android:onClick="openCreateCharacter"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK TO\nPLAY MENU"
        android:id="@+id/button12"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/buttonBackground"
        android:textColor="@color/buttonText"
        android:onClick="returnToPlayMenu"/>
</RelativeLayout>
